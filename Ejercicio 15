var circulo = new Object();
        circulo.radio = prompt("ingrese el radio de la circulo");
        circulo.area = area(circulo.radio);
        circulo.perimetro = perimetro(circulo.radio);

console.log(circulo);

        function area(a){
            const pi = 3.14;
            let area = pi * a**2;
            return area;
        }

        function perimetro(a){
            const pi = 3.14;
            let perimetro = 2 * pi * a;
            return perimetro;
        }
